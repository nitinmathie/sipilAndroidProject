<?xml version="1.0" encoding="utf-8"?>
        <layout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/root_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E2E2E2"
                tools:context="com.example.hopelastrestart1.ui.siteEngineer.SeReportForms.ViewTaskActivity">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="697dp"
                    android:padding="16dp">
                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/activity_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Activity"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="@android:color/holo_green_light"
                            app:fontFamily="serif-monospace" />
                        <TextView
                            android:id="@+id/material_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Material"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="#465A61"
                            app:fontFamily="serif-monospace" />
                        <TextView
                            android:id="@+id/machine_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Machine"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="#465A61"
                            app:fontFamily="serif-monospace" />
                        <TextView
                            android:id="@+id/manpower_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Men"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="#465A61"
                            app:fontFamily="serif-monospace" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linearLayout1"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:padding="18dp">

                        <EditText
                            android:id="@+id/activity_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/edit_text_round_gray_background"
                            android:drawablePadding="16dp"
                            android:hint="Activity Type"
                            android:padding="12dp" />
                        <!--
                                        <Spinner
                                            android:id="@+id/spinner_task"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent" />
                        -->
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linearLayout2"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/from_node"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="From Node"
                            android:layout_marginBottom="12dp"

                            android:padding="12dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="#465A61"
                            app:fontFamily="serif-monospace" />

                        <EditText
                            android:id="@+id/edit_text_from_node"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/edit_text_round_gray_background"
                            android:drawablePadding="16dp"
                            android:padding="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linearLayout3"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/to_node"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="To Node"
                            android:layout_marginBottom="12dp"
                            android:padding="12dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="#465A61"
                            app:fontFamily="serif-monospace" />

                        <EditText
                            android:id="@+id/edit_text_to_node"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/edit_text_round_gray_background"
                            android:drawablePadding="16dp"
                            android:padding="12dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linearLayout4"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/select_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Assign To"
                            android:layout_marginBottom="12dp"
                            android:padding="12dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="#465A61"
                            app:fontFamily="serif-monospace" />

                        <Spinner
                            android:id="@+id/spinner_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:hint="Assign To"
                            android:background="@drawable/edit_text_round_gray_background"
                            android:drawablePadding="16dp"
                            android:padding="12dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linearLayout6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linearLayout5"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:padding="18dp">

                        <Button
                            android:id="@+id/btn_submit_activity_machinery"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Next"
                            android:textAllCaps="false" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linearLayout6"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:padding="18dp">

                        <EditText
                            android:id="@+id/err"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:visibility="visible"
                            android:text="Next"
                            android:textAllCaps="false" />

                    </LinearLayout>


                </RelativeLayout>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </layout>