<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clrWhite"
        tools:context=".ui.planEngineer.Task.AssignDailyTask.AssignTaskActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/clr_lite"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activity_heading"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Activity"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/clrWhite"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/material_heading"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Machinery"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/clrBlack"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/machine_heading"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Material"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/clrBlack"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/manpower_heading"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Man Power"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/clrBlack"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="12dp"
                        android:text="Activity Type :"
                        android:textColor="@color/colorAccent" />

                    <EditText
                        android:id="@+id/activity_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edit_text_round_gray_background"
                        android:hint="Activity Type"
                        android:inputType="text" />
                    <!--
                                    <Spinner
                                        android:id="@+id/spinner_task"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent" />
                    -->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="12dp"
                        android:text="From Node :"
                        android:textColor="@color/colorAccent" />

                    <EditText
                        android:id="@+id/edit_text_from_node"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edit_text_round_gray_background"
                        android:hint="From Node" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="12dp"
                        android:text="To Node :"
                        android:textColor="@color/colorAccent" />

                    <EditText
                        android:id="@+id/edit_text_to_node"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edit_text_round_gray_background"
                        android:hint="To Node" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="12dp"
                        android:text="Assign To:"
                        android:textColor="@color/colorAccent" />

                    <Spinner
                        android:id="@+id/spinner_user"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edit_text_round_gray_background" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="12dp"
                        android:text="Estimated Time Line :"
                        android:textColor="@color/colorAccent" />

                    <EditText
                        android:id="@+id/et_estimated_timeline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/edit_text_round_gray_background"
                        android:hint="Time Line"
                        android:inputType="text" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/linearLayout5"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/btn_submit_activity_machinery"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_rounded_corners"
                        android:text="Next"
                        android:textAllCaps="false"
                        android:textColor="@color/clrWhite"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearLayout6"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/err"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Next"
                        android:textAllCaps="false"
                        android:visibility="visible" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="invisible" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>


